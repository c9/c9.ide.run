{
    "script" : [
        "set -e",
        "if [ \"$debug\" == true ]; then ",
            "gcc -ggdb3 -O0 -std=c99 $file -o \"$file\".o",
            "chmod 755 $file.o",
            "gdbserver --once :15470 \"$file.o\" $args",
        "else",
            "gcc -std=c99 $file -o $file.o",
            "chmod 755 \"$file.o\"",
            "\"$file.o\" $args",
        "fi"
    ],
    "info": "Running \"$file\"",
    
    "debugport": 15470,
    "debugger": "gdb",
    "executable": "$file.o",
    "maxdepth": 50,
    "$debugDefaultState": false,
    
    "env" : {},
    "selector": "^.*\\.c$"
}
